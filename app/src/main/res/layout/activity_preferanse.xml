<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="75dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Preferanse">


    <Button
        android:id="@+id/buttonAvbryt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tilbake" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="Please choose your language here"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/knappsv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/svensk"></Button>

        <Button
            android:id="@+id/knappno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/norsk"></Button>

        <Button
            android:id="@+id/knappde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/de"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />

        <EditText
            android:id="@+id/antallSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/knappde"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:hint="Please Write Your 5/10/15"
            android:inputType="number"
            android:textColor="@color/design_default_color_primary"
            android:textSize="25sp" />

        <Button
            android:id="@+id/buttonPref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="antall sporsmÃ¥l"></Button>


    </LinearLayout>

</LinearLayout>