<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/barn3"
    tools:context=".StartGame">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp">
        <Button
            android:id="@+id/buttonAvbryt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tilbake" />

    </LinearLayout>

    <!-- Question -->
    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:paddingBottom="10dp"
        android:text="TextView"
        android:textColor="@color/design_default_color_primary"
        android:textSize="25sp" />

    <!-- Answer -->
    <EditText
        android:id="@+id/editTextAnswer"
        android:layout_width="wrap_content"
        android:width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:maxWidth="100dp"
        android:gravity="center"
        android:hint="Please Write Your Answer Here"
        android:inputType="number"
        android:textSize="25sp"
        android:textColor="@color/design_default_color_primary" />

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextAnswer"
        android:layout_alignRight="@id/editTextAnswer"
        android:layout_marginRight="-108dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:gravity="center"
        android:onClick="okButton"
        android:text="OK" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="7"
                android:onClick="seven"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="8"
                android:textColor="@color/black"
                android:onClick="eight"
                android:textSize="20sp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="9"
                android:onClick="nine"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="1dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="4"
                android:onClick="four"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="5"
                android:onClick="five"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="6"
                android:onClick="six"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="1"
                android:onClick="one"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="2"
                android:onClick="two"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="3"
                android:onClick="three"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >



            <Button
                android:id="@+id/buttonClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_orange_light"
                android:text="clear"
                android:onClick="clearButton"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="0"
                android:onClick="zero"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_orange_light"
                android:text="Next"
                android:onClick="nextButton"
                android:layout_margin="1dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>